@model Checkout
@{
}
<form asp-action="Checkout" method="post">
    <div class="form-group">
        <div>
            <label asp-for="City" class="col-form-label">City: </label>
        </div>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="Street" class="col-form-label">Street: </label>
        </div>
        <input type="text" asp-for="Street" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="House" class="col-form-label">House: </label>
        </div>
        <input type="text" asp-for="House" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="Apartment" class="col-form-label">Apartment: </label>
        </div>
        <input type="text" asp-for="Apartment" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="DeliveryTime" class="col-form-label">Delivery time: </label>
        </div>
        <input  asp-for="DeliveryTime" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="Comment" class="col-form-label">Comment: </label>
        </div>
        <input type="text" asp-for="Comment" class="form-control" />
    </div>
    @await Html.PartialAsync("~/Views/Cart/CartSummaryPartial.cshtml", Model?.Cart ?? new())
    <div>
        <input type="submit" value="Publish" class="btn btn-primary" />
    </div>
</form>