@model SmartphoneData
@{
}
<form asp-action="AddProduct" enctype="multipart/form-data" method="post">
    <input type="hidden" name="productType" value="notebook" />
    <input type="hidden" name="category" value="notebook" />
    <input type="hidden" asp-for="SalerId" value=@ViewData["SalerId"] />
    <div class="form-group">
        <div>
            <label asp-for="Cores" class="col-form-label">Cores: </label>
        </div>
        <input type="text" asp-for="Cores" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="ScreenSize" class="col-form-label">Screen size: </label>
        </div>
        <input type="text" asp-for="ScreenSize" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="CorpusType" class="col-form-label">CorpusType: </label>
        </div>
        <input type="text" asp-for="CorpusType" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="BatteryVolume" class="col-form-label">Battery (Mah): </label>
        </div>
        <input type="text" asp-for="BatteryVolume" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="Category" class="col-form-label">Category: </label>
        </div>
        <input type="text" asp-for="Category" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="Resolution" class="col-form-label">Resolution: </label>
        </div>
        <input type="text" asp-for="Resolution" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="Cost" class="col-form-label">Cost: </label>
        </div>
        <input type="text" asp-for="Cost" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="Description" class="col-form-label">Description: </label>
        </div>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="Name" class="col-form-label">Name: </label>
        </div>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <div>
            <label asp-for="ImageFile" class="col-form-label">Image: </label>
        </div>
        <input type="text" asp-for="ImageFile" class="form-control" />
    </div>
    <div>
        <input type="submit" value="Publish" class="btn btn-primary" />
    </div>
</form>}
